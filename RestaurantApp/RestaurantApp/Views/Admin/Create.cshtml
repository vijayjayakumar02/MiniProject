@{
    ViewData["Title"] = "Add Dish";
}

@model RestaurantApp.Models.ViewModel.MenuViewModel


<form method="post" enctype="multipart/form-data" asp-action="Create">

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="dname" class="col-form-label" asp-for="DishName"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="text" id="dname" class="form-control" asp-for="DishName">
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="DishName" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-sm-start offset-sm-3 mt-3 align-items-center">
        <div class="col-4 col-sm-3">
            <label for="category" class="col-form-label" asp-for="Category"></label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="category" id="veg" value="Vegetarian">
            <label class="form-check-label" for="inlineRadio1">Vegetarian</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="category" id="nonveg" value="Non-Vegetarian">
            <label class="form-check-label" for="inlineRadio2">Non-Vegetarian</label>
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="price" class="col-form-label" asp-for="Price"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="number" id="price" class="form-control" asp-for="Price">
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="stock" class="col-form-label" asp-for="Stock"></label>
        </div>
        <div class="col-6 col-sm-4">
            <input type="number" id="stock" class="form-control" asp-for="Stock">
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-center">
        <div class="col-4 col-sm-2">
            <label for="stock" class="col-form-label" asp-for="DishImage"></label>
        </div>
        <div class="col-6 col-sm-4">
            <div class="custom-file">
                <input asp-for="DishImage" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
        </div>
    </div>
    <div class="row offset-6">
        <span asp-validation-for="DishImage" class="text-danger"></span>
    </div>

    <div class="row g-3 justify-content-center mt-3 align-items-end">
        <div class="col-auto">
            <input type="submit" value="submit" class="btn btn-info">
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-danger">Back</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}