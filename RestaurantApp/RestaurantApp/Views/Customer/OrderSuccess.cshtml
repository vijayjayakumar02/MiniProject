@{
    ViewData["Tilte"] = "Order Placed";
}

@model RestaurantApp.Models.Order

<div class="card">
    <div class="card-header bg-primary text-white">
        Order Placed Succesfully
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-sm-6">
                <h1 class="text-center">Order Id: </h1>
            </div>
            <div class="col-12 col-sm-6">
                <h3 class="text-center">@Model.OrderId</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6">
                <h1 class="text-center">Name: </h1>
            </div>
            <div class="col-12 col-sm-6">
                <h3 class="text-center">@Model.CustomerName</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6">
                <h1 class="text-center">Phone Number: </h1>
            </div>
            <div class="col-12 col-sm-6">
                <h3 class="text-center">@Model.MobileNo</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6">
                <h1 class="text-center">Dishes: </h1>
            </div>
            @foreach (var item in Model.Item)
            {
            <div class="col-12 col-sm-6">
                <h2 class="text-center">@item.Dish</h2>
            </div>
            }
        </div>
        <div class="row">
            <div class="col-12 col-sm-6">
                <h1 class="text-center">Total Cost: </h1>
            </div>
            <div class="col-12 col-sm-6">
                <h2 class="text-center">@Model.TotalCost</h2>
            </div>
        </div>
    </div>
</div>
